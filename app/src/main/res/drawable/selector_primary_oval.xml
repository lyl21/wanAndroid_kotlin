<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="180dp" />
            <gradient
                android:angle="270"
                android:endColor="#FF8008"
                android:startColor="#FFC837"
                android:type="linear"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="180dp" />
            <gradient
                android:angle="270"
                android:centerColor="#ff75c3"
                android:endColor="#ffe83f"
                android:startColor="#cd93ff"
                android:type="linear"/>
        </shape>
    </item>
</selector>
